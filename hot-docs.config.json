{
  "contentDir": "./content",
  "collections": {
    "docs": { "dir": "docs", "routeBase": "/", "type": "docs" },
    "blog": { "dir": "blog", "routeBase": "/blog", "type": "blog" },
    "pages": { "dir": "pages", "routeBase": "/", "type": "pages" }
  },
  "site": { "title": "Hot Docs", "base": "/" },
  "theme": { "name": "@hot-docs/theme-neon-dark", "tokens": { "accent": "#7c3aed" } },
  "plugins": [
    { "name": "@hot-docs/plugin-search", "options": { "outFile": "search-index.json" } },
    { "name": "@hot-docs/plugin-sitemap", "options": { "siteUrl": "http://127.0.0.1:4173" } },
    { "name": "@hot-docs/plugin-feed", "options": { "siteUrl": "http://127.0.0.1:4173" } }
  ],
  "dev": { "port": 5173, "host": "127.0.0.1", "open": false, "includeDrafts": true }
}
