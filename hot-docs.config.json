{
  "contentDir": "./content",
  "collections": {
    "docs": { "dir": "docs", "routeBase": "/", "type": "docs" },
    "blog": { "dir": "blog", "routeBase": "/blog", "type": "blog" },
    "pages": { "dir": "pages", "routeBase": "/", "type": "pages" }
  },
  "site": { "title": "Hot Docs", "base": "/" },
  "theme": { "name": "@hot-docs/theme-neon-dark", "tokens": { "palettePreset": "notion-light", "accent": "#2f76ff" } },
  "plugins": [
    { "name": "@hot-docs/plugin-search", "options": { "outFile": "search-index.json" } },
    { "name": "@hot-docs/plugin-taxonomy", "options": { "routeBase": "/categories", "includeCollections": ["docs", "blog"] } },
    { "name": "@hot-docs/plugin-mermaid" },
    { "name": "@hot-docs/plugin-raw-md" },
    { "name": "@hot-docs/plugin-ai-pack", "options": { "outDir": "ai", "rawDir": "__raw__", "includeCollections": ["docs", "blog"] } },
    { "name": "@hot-docs/plugin-ai-ui", "options": { "endpointBase": "/seed", "includeCollections": ["docs", "blog"] } },
    { "name": "@hot-docs/plugin-sitemap", "options": { "siteUrl": "https://example.com/" } },
    { "name": "@hot-docs/plugin-feed", "options": { "siteUrl": "https://example.com/" } }
  ],
  "dev": { "port": 5173, "host": "127.0.0.1", "open": false, "includeDrafts": true }
}
