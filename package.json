{
  "name": "hot-docs-workspace",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx --tsconfig packages/cli/tsconfig.json packages/cli/src/index.ts dev",
    "site:init": "tsx --tsconfig packages/cli/tsconfig.json packages/cli/src/index.ts init",
    "site:new": "tsx --tsconfig packages/cli/tsconfig.json packages/cli/src/index.ts new",
    "site:build": "tsx --tsconfig packages/cli/tsconfig.json packages/cli/src/index.ts build",
    "site:preview": "tsx --tsconfig packages/cli/tsconfig.json packages/cli/src/index.ts preview",
    "sync:setup": "node scripts/server-setup.mjs",
    "sync:push": "node scripts/deploy.mjs",
    "sync:watch": "node scripts/deploy-watch.mjs",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "test": "node --import tsx --test tests/*.test.mjs"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@hot-docs/theme-neon-dark": "workspace:*",
    "@hot-docs/plugin-search": "workspace:*",
    "@hot-docs/plugin-raw-md": "workspace:*",
    "@hot-docs/plugin-sitemap": "workspace:*",
    "@hot-docs/plugin-feed": "workspace:*",
    "chokidar": "^4.0.0",
    "esbuild": "^0.25.0",
    "tsx": "^4.20.0",
    "typescript": "^5.7.0"
  }
}
